<UserControl x:Class="RecipeGUI.GroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipeGUI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="250">
	<DockPanel HorizontalAlignment="Left" Height="50" LastChildFill="False" VerticalAlignment="Top" Width="250">
		<Label Content="Group Name:" Height="30" VerticalAlignment="Top" Margin="0,10,0,0"/>
		<local:SuggestionBox x:Name="SuggesrionField" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,16" Width="129"/>
		<Button Content="-" Height="30" VerticalAlignment="Top" Width="27" Margin="3,10,0,0" Click="Button_Click"/>
	</DockPanel>

</UserControl>
