<Window x:Class="RecipeGUI.CurrencyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeGUI"
        mc:Ignorable="d"
		Style="{StaticResource StarboundWindow}"
		Closing="Window_Closing"
        Title="CurrencyWindow" Height="334.426" Width="320">
	<StackPanel>
		<DockPanel Height="38">
			<Label Content="Currencies:" FontSize="25" VerticalAlignment="Center"/>
			<Button x:Name="AddCurrencyButton" Content="Add Currency" FontSize="14" Width="97" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Click="AddCurrencyButton_Click"/>
		</DockPanel>
		<ScrollViewer Height="203" Background="#0E101B">
			<StackPanel x:Name="CurrencyControlsStackPanel">
				
			</StackPanel>
		</ScrollViewer>
		<DockPanel LastChildFill="False" Margin="0,10,0,0">
			<Button Content="Done" FontSize="25" DockPanel.Dock="Right" Margin="0,0,5,0" Width="95" Click="Done_Click"/>
		</DockPanel>
	</StackPanel>
</Window>
