<Window x:Class="RecipeGUI.CurrencyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeGUI"
        mc:Ignorable="d"
		Style="{StaticResource StarboundWindow}"
		Closing="Window_Closing"
        Title="CurrencyWindow" Height="450" Width="320">
	<StackPanel>
		<DockPanel Height="38">
			<Label Content="Currencies:" VerticalAlignment="Center"/>
			<Button x:Name="AddCurrencyButton" Width="97" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Click="AddCurrencyButton_Click">
				<Grid>
					<Image Source="button.png" Stretch="Fill" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
					<Label Content="Add Currency" VerticalAlignment="Center" HorizontalAlignment="Center"/>
				</Grid>
			</Button>
		</DockPanel>
		<ScrollViewer Height="375">
			<StackPanel x:Name="CurrencyControlsStackPanel">
				
			</StackPanel>
		</ScrollViewer>

	</StackPanel>
</Window>
