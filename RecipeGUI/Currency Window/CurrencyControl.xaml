<UserControl x:Class="RecipeGUI.CurrencyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipeGUI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="28 0">
	<StackPanel Orientation="Horizontal">
		<TextBlock Text="Currency Amount" TextWrapping="Wrap" Width="53" VerticalAlignment="Center"/>
		<local:SuggestionBox x:Name="CurrenyNameSuggestion" Width="102" VerticalAlignment="Center" Margin="0,16"/>
		<Label Content="Amount" VerticalAlignment="Center" Margin="0"/>
		<TextBox x:Name="AmountTextField" VerticalAlignment="Center" MinWidth="50" Text="0"  />
		<Button x:Name="RemoveControlButton" Content="-" VerticalAlignment="Center" Width="20" Click="RemoveControlButton_Click" Margin="0,12"/>
	</StackPanel>
</UserControl>
